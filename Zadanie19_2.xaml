<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             x:Class="Zadania.Zadanie19_2"
             Title="Zadanie19_2">
    <ScrollView>
        <VerticalStackLayout
         Padding="30,67"
         Spacing="25"
         HorizontalOptions="Center"
            WidthRequest="600">
            <HorizontalStackLayout>
            <Picker x:Name="itemPicker"
                    WidthRequest="145">
                <Picker.Items >
                    <x:String>Internista</x:String>
                    <x:String>Kardiolog</x:String>
                    <x:String>Dermatlog</x:String>
                    <x:String>Okulista</x:String>
                </Picker.Items>
            </Picker>
            
            <DatePicker x:Name="MyDatePicker"
                        Format="dd.MM.yyyy"
                        MinimumDate="{x:Static sys:DateTime.Today}"
                        HorizontalOptions="Center"
                        WidthRequest="145"/>

            <TimePicker x:Name="MyTimePicker"
                        Format="HH:mm"
                        HorizontalOptions="Center"
                        WidthRequest="250"/>
            </HorizontalStackLayout>
            <Button Text="Zarezerwuj"
                 Clicked="OnButtonClicked"/>

            <Label x:Name="ResultLabel"
                FontSize="18"
                   HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>