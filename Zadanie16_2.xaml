<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zadania.Zadanie16_2"
             Title="Zadanie16_2">

    <VerticalStackLayout Padding="25" Spacing="15">
        <Label 
            Text="Rejestracja"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="Large"/>
        <Entry
            x:Name="ImieEntry"
            Placeholder="Imie"
            Margin="5"
            FontSize="Medium"
            />
        <Entry
            x:Name="EmailEntry"
            Placeholder="E-mail"
            Keyboard="Email"
            Margin="5"
            FontSize="Medium"/>
        <Entry
            x:Name="HasloEntry"
            Placeholder="Haslo"
            IsPassword="True"
            Margin="5"
            FontSize="Medium"/>
        <Button
            Text="Zarejestruj"
            BackgroundColor="Blue"
            FontSize="Medium"
            FontAttributes="Bold"
            TextColor="white"/>
        
    </VerticalStackLayout>
</ContentPage>